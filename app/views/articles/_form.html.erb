<% if @article.errors.any? %>
  <h2>The following errors prevented the article from getting created</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="row">
  <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>

    <div class="form-group">
      <div class="control-label col-sm-2 text-right">
        <%= f.label :title %><br />
      </div>
      <div class="col-sm-7">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of Article", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2 text-right">
        <%= f.label :description %><br />
      </div>
      <div class="col-sm-7">
        <%= f.text_area :description, rows: 7, class: "form-control", placeholder: "Body of article" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-7 col-sm-offset-2">
        <%= f.submit class: "btn btn-primary btn-lg" %>
        <%= link_to "Cancel", articles_path %>
      </div>
    </div>

  <% end %>
</div>